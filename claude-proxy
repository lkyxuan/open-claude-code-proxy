#!/bin/bash

# Claude Local Proxy 控制脚本

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
SERVER_JS="$SCRIPT_DIR/server.js"
PID_FILE="$SCRIPT_DIR/.claude-proxy.pid"
LOG_FILE="$SCRIPT_DIR/proxy.log"
CONFIG_FILE="$HOME/.claude-proxy/config.json"

# 从配置文件读取端口
get_port() {
    if [ -f "$CONFIG_FILE" ]; then
        PORT=$(cat "$CONFIG_FILE" | grep -o '"port":[[:space:]]*[0-9]*' | grep -o '[0-9]*')
        if [ -n "$PORT" ]; then
            echo "$PORT"
            return
        fi
    fi
    echo "${PORT:-12346}"
}

PROXY_PORT=$(get_port)

# 颜色定义
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# 打印带颜色的消息
info() { echo -e "${BLUE}ℹ${NC}  $1"; }
success() { echo -e "${GREEN}✓${NC}  $1"; }
warning() { echo -e "${YELLOW}⚠${NC}  $1"; }
error() { echo -e "${RED}✗${NC}  $1"; }

# 检查服务是否运行
is_running() {
    if [ -f "$PID_FILE" ]; then
        PID=$(cat "$PID_FILE")
        if ps -p "$PID" > /dev/null 2>&1; then
            return 0
        else
            # PID 文件存在但进程不存在，清理
            rm -f "$PID_FILE"
            return 1
        fi
    fi
    return 1
}

# 检查环境
check_environment() {
    info "检查运行环境..."

    # 检查 Node.js
    if ! command -v node &> /dev/null; then
        error "Node.js 未安装"
        echo "请先安装 Node.js: https://nodejs.org/"
        return 1
    fi
    success "Node.js: $(node --version)"

    # 检查 Claude Code
    if ! command -v claude &> /dev/null; then
        error "Claude Code 未安装或不在 PATH 中"
        echo ""
        echo "安装方式："
        echo "  1. npm 安装: npm install -g @anthropic-ai/claude-code"
        echo "  2. 或确保 native 安装的 claude 在 PATH 中"
        return 1
    fi

    CLAUDE_PATH=$(which claude)
    success "Claude Code: $CLAUDE_PATH"

    # 检查环境变量
    if [ -z "$ANTHROPIC_BASE_URL" ]; then
        warning "ANTHROPIC_BASE_URL 未设置"
        echo ""
        echo "如需使用中转服务，请设置环境变量:"
        echo "  export ANTHROPIC_BASE_URL=\"https://your-relay-service.com/v1\""
        echo "  export ANTHROPIC_API_KEY=\"your-api-key\""
        echo ""
        echo "然后执行: source ~/.zshrc  # 或 source ~/.bashrc"
        echo ""
    else
        success "ANTHROPIC_BASE_URL: $ANTHROPIC_BASE_URL"
    fi

    return 0
}

# 测试 Claude Code 连接
test_claude() {
    info "测试 Claude Code 连接..."

    if ! check_environment; then
        return 1
    fi

    # 测试简单命令
    if timeout 10s claude --print "test" &> /dev/null; then
        success "Claude Code 连接正常"
        return 0
    else
        error "Claude Code 连接失败"
        echo ""
        echo "可能的原因："
        echo "  1. Claude Code 未登录（运行: claude auth login）"
        echo "  2. 环境变量配置错误"
        echo "  3. 网络连接问题"
        return 1
    fi
}

# 启动服务
start() {
    if is_running; then
        warning "服务已在运行 (PID: $(cat $PID_FILE))"
        return 0
    fi

    info "启动 Claude Local Proxy..."

    # 环境检查
    if ! check_environment; then
        error "环境检查失败，无法启动"
        return 1
    fi

    # 后台启动（使用配置的端口）
    PORT=$PROXY_PORT nohup node "$SERVER_JS" > "$LOG_FILE" 2>&1 &
    PID=$!
    echo $PID > "$PID_FILE"

    # 等待启动
    sleep 2

    if is_running; then
        success "服务已启动 (PID: $PID)"
        success "监听地址: http://localhost:$PROXY_PORT"
        echo ""
        info "查看日志: $0 logs"
        info "查看状态: $0 status"
        return 0
    else
        error "服务启动失败"
        echo ""
        echo "查看日志获取详细信息:"
        echo "  tail -f $LOG_FILE"
        return 1
    fi
}

# 停止服务
stop() {
    if ! is_running; then
        warning "服务未运行"
        return 0
    fi

    PID=$(cat "$PID_FILE")
    info "停止服务 (PID: $PID)..."

    kill "$PID" 2>/dev/null

    # 等待进程结束
    for i in {1..10}; do
        if ! ps -p "$PID" > /dev/null 2>&1; then
            break
        fi
        sleep 0.5
    done

    # 强制结束
    if ps -p "$PID" > /dev/null 2>&1; then
        warning "强制结束进程..."
        kill -9 "$PID" 2>/dev/null
    fi

    rm -f "$PID_FILE"
    success "服务已停止"
}

# 重启服务
restart() {
    info "重启服务..."
    stop
    sleep 1
    start
}

# 查看状态
status() {
    if is_running; then
        PID=$(cat "$PID_FILE")
        success "服务运行中"
        echo ""
        echo "  PID:      $PID"
        echo "  地址:     http://localhost:$PROXY_PORT"
        echo "  日志:     $LOG_FILE"
        echo ""

        # 显示最近的日志
        if [ -f "$LOG_FILE" ]; then
            echo "最近日志:"
            echo "─────────────────────────────────────"
            tail -n 5 "$LOG_FILE"
        fi
    else
        warning "服务未运行"
    fi
}

# 查看日志
logs() {
    if [ ! -f "$LOG_FILE" ]; then
        warning "日志文件不存在: $LOG_FILE"
        return 1
    fi

    if [ "$1" = "-f" ] || [ "$1" = "--follow" ]; then
        info "实时查看日志 (Ctrl+C 退出)..."
        tail -f "$LOG_FILE"
    else
        cat "$LOG_FILE"
    fi
}

# 显示帮助
help() {
    cat << EOF
Claude Local Proxy 控制脚本

用法: $0 <命令> [选项]

命令:
  start       启动服务
  stop        停止服务
  restart     重启服务
  status      查看运行状态
  logs        查看日志
  logs -f     实时查看日志
  test        测试环境和连接
  help        显示此帮助信息

示例:
  $0 start          # 启动服务
  $0 status         # 查看状态
  $0 logs -f        # 实时查看日志
  $0 restart        # 重启服务

配置文件:
  客户端配置 (opencode/cursor):
    {
      "baseURL": "http://localhost:$PROXY_PORT",
      "apiKey": "sk-any-key-works"
    }

更多信息: https://github.com/your-repo/claude-local-proxy
EOF
}

# 主函数
main() {
    case "${1:-}" in
        start)
            start
            ;;
        stop)
            stop
            ;;
        restart)
            restart
            ;;
        status)
            status
            ;;
        logs)
            logs "${2:-}"
            ;;
        test)
            test_claude
            ;;
        help|--help|-h)
            help
            ;;
        *)
            error "未知命令: ${1:-}"
            echo ""
            help
            exit 1
            ;;
    esac
}

main "$@"
